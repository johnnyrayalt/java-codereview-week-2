{{#partial "content"}}

    <h3 class="center">Welcome to the 2018 hack-a-thon!</h3>

    <p class="center">To register a team, fill out and submit the form below</p>

    <form action="/post/new" method="POST">
        <label for="teamName">Enter your Team Name:</label><br>
        <input type="text" id="teamName" name="teamName"><br>
        <label for="teamDescription">Enter a short description about your teams objective</label><br>
        <input type="text" id="teamDescription" name="teamDescription"><br>

        <button class="btn btn-success" type="submit">Submit!</button>
    </form>


    {{#if team}}
        <ul>
            {{#each team}}
                <li>
                    <p>Team Name</p>
                    <p>{{this.teamName}}</p>
                    <p>Team Description</p>
                    <p>{{this.teamDescription}}</p>
                </li>
           {{/each}}
        </ul>
    {{/if}}


{{/partial}}

{{> layout.hbs}}